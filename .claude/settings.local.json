{
  "permissions": {
    "allow": [
      "mcp__Figma__get_figma_data",
      "Bash(npx tsc:*)"
    ]
  },
  "enabledMcpjsonServers": [
    "Figma",
    "shadcn",
    "next-devtools"
  ],
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Write|Edit|MultiEdit|NotebookEdit",
        "hooks": [
          {
            "type": "command",
            "command": "python3 \"$CLAUDE_PROJECT_DIR\"/.claude/hooks/post-tool-call.py"
          }
        ]
      }
    ]
  }
}
